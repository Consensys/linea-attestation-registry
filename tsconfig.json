{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "target": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true
  },
  "references": [
    {
      "path": "contracts"
    },
    {
      "path": "explorer"
    },
    {
      "path": "governance"
    },
    {
      "path": "sdk"
    },
    {
      "path": "snap/packages/site"
    },
    {
      "path": "snap/packages/snap"
    },
    {
      "path": "subgraph"
    },
    {
      "path": "website"
    }
  ],
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["node_modules", "typechain-types"]
}
